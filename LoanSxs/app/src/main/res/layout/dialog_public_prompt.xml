<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <com.jyh.com.jyh.View.MyTextview
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_background_up"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/common_10dp"
            android:text="@string/repayment_loan"
            android:textColor="@color/common_personal"
            android:textSize="@dimen/common_16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background_down"
        android:orientation="vertical">

        <com.jyh.com.jyh.View.MyTextview
            android:id="@+id/dialog_context_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_10dp"
            android:gravity="center"
            android:text="@string/repayment_loan"
            android:textColor="@color/common_personal_grey"
            android:textSize="@dimen/common_18dp" />

        <com.jyh.com.jyh.View.MyTextview
            android:id="@+id/dialog_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_10dp"
            android:gravity="center"
            android:padding="@dimen/common_10dp"
            android:text="@string/repayment_loan"
            android:textColor="@color/common_personal_grey"
            android:textSize="@dimen/common_14dp" />

        <com.jyh.com.jyh.View.MyButton
            android:id="@+id/dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/common_10dp"
            android:layout_margin="@dimen/common_20dp"
            android:background="@drawable/dialog_background"
            android:text="@string/repayment_loan"
            android:textColor="@color/common_personal"
            android:textSize="@dimen/common_18dp" />

    </LinearLayout>

</LinearLayout>
